<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/gap_status_bar"/>
    <include android:id="@+id/titlebar" layout="@layout/titlebar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:textSize="15sp"
        android:text="感谢您对我们的支持，感谢您对我们的产品或在使用过程中遇到的问题提出宝贵的意见。"/>
    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="写下您的宝贵意见（512字以内）"
        android:minLines="10"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="5dp"
        android:background="@drawable/feedback_et_bg"
        android:gravity="top"
        android:focusedByDefault="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="联系方式"/>
    <EditText
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/submit"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="提  交"
        android:textSize="17sp"
        android:background="@android:color/holo_blue_light"
        android:textColor="#ffffff"
        android:gravity="center"/>
</LinearLayout>
</layout>