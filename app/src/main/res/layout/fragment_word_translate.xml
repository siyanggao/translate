<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="presenter"
            type="com.gsy.translate.home.WordTranslateFragment.Presenter"/>
    </data>
<android.support.constraint.ConstraintLayout
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">
    <!--<include layout="@layout/gap_status_bar" android:id="@+id/gap_status_bar"/>-->

    <android.support.v7.widget.CardView
        android:id="@+id/word_translate_cd"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:contentPaddingTop="7dp"
        app:contentPaddingBottom="7dp"
        app:contentPaddingLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/gap_status_bar">
        <EditText
            android:id="@+id/word_translate_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:addTextChangedListener="@{presenter.textWatcher}"
            android:layout_marginRight="50dp"
            android:background="@drawable/publish_et_bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:saveEnabled="false"/>
        <TextView
            android:id="@+id/word_translate_cancel"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="取消"
            android:textSize="18sp"
            android:layout_gravity="right|center_vertical"
            android:gravity="center"
            android:onClick="@{presenter.cancel}"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/word_translate_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/word_translate_cd"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/word_translate_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/word_translate_cd"/>
    <TextView
        android:id="@+id/word_translate_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{presenter.clearHistory}"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="清空历史记录"
        android:textColor="#666666"
        android:background="@drawable/radius_gray_bg"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/word_translate_history"
        app:layout_constraintRight_toRightOf="@id/word_translate_history"
        app:layout_constraintTop_toBottomOf="@id/word_translate_history" />
    <LinearLayout
        android:id="@+id/word_translate_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/word_translate_cd"
        android:padding="10dp">
        <TextView
            android:id="@+id/word_translate_detail_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/word_translate_detail_phonemes_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/word_translate_detail_phonemes_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/word_translate_detail_definition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.5"
            android:textSize="16sp"
            android:textColor="#666666"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="例句"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/line_top_bg"/>
        <TextView
            android:id="@+id/word_translate_detail_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lineSpacingMultiplier="1.5"
            android:textSize="16sp"
            android:textColor="#666666"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
</layout>